# Niazi Tribe Local Development Environment
# Copy this file to .env for local development

# Server Configuration
NODE_ENV=development
PORT=4000

# MySQL Configuration (adjust password to match your installation)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=niazi_tribe
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_root_password

# Alternative: If you created a dedicated user
# MYSQL_USER=niazi_user
# MYSQL_PASSWORD=niazi_password

# CORS Configuration
CORS_ORIGINS=http://localhost:3000

# Neo4j Configuration (optional - can be added later)
NEO4J_URI=
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=

# Redis Configuration (optional - can be added later)
REDIS_URL=

# Authentication (IMPORTANT: Change these for production!)
JWT_SECRET=dev-jwt-secret-change-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=dev-refresh-secret-change-in-production
BCRYPT_SALT_ROUNDS=12

# Email Configuration (optional for development)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@niazitribe.com

# AWS S3 Configuration (optional for development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=niazi-tribe-media-dev

# For local file storage instead of S3
# AWS_ENDPOINT=http://localhost:9000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,application/pdf

# External API Keys (optional)
FAMILYSEARCH_API_KEY=
MYHERITAGE_API_KEY=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Client Configuration
CLIENT_URL=http://localhost:3000
API_BASE_URL=http://localhost:4000

# Feature Flags
ENABLE_GRAPHQL=true
ENABLE_DNA_FEATURES=true
ENABLE_MATCHING=true

# Frontend Environment Variables (for Next.js)
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_APP_NAME=Niazi Tribe
NEXT_PUBLIC_APP_VERSION=1.0.0 